{
  "Application": {
    "DefaultController": "Home",
    "DefaultAction": "Index",
    "DefaultLayout": "Default",
    "NotFoundController" : "Home",
    "NotFoundAction": "NotFound"
  },
  "Debug":{
    "DieOnRoutingError": true,
    "DontCacheModels": false
  },
  "Logging": {
    "FileDirectory": "/logs/",
    "Loggers": [
      {
        "CacheLogger": {
          "Name": "Cache"
        }
      },
      {
        "FileLog": {
          "Name": "FileLog",
          "FileName": "/logs/default.log"
        }
      },
      {
        "PdoSqlLog":{
          "Name": "Db",
          "Provider": "mysql",
          "Server": "127.0.0.1",
          "Port": 3306,
          "Username": "root",
          "Password": "",
          "Database": "share",
          "Table": "log"
        }
      }
    ]
  }
}